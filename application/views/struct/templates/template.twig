  <script type="text/javascript">
        $(document).ready(function(){
            $('.slick_slide').slick({
              
                autoplay: true,
                centerMode: true,
                speed: 600,
                slidesToShow: 3,
                slidesToScroll: 1,
                // nextArrow: '<i class="i_control prev"></i>',
                // prevArrow: '<i class="i_control next"></i>',
              
              responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                    
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        centerMode: false,
                        arrows: false,
                        slidesToShow: 2,
                        slidesToScroll: 1
                    }
                },
                {
                  breakpoint: 480,
                    
                    settings: {
                        centerMode: false,
                        arrows: false,
                        slidesToShow: 1,
                        slidesToScroll: 1
                    
                    }
                }
                
              ]
            });

            $('.slick_slide_bottom').slick({
              
                autoplay: true,
                centerMode: true,
                speed: 600,
                slidesToShow: 3,
                slidesToScroll: 1,
                arrows: false,
                // nextArrow: '<i class="i_control prev"></i>',
                // prevArrow: '<i class="i_control next"></i>',
              
              responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1,
                    
                    }
                },
                {
                    breakpoint: 600,
                    settings: {
                        centerMode: false,
                        arrows: false,
                        slidesToShow: 2,
                        slidesToScroll: 1
                    }
                },
                {
                  breakpoint: 480,
                    
                    settings: {
                        centerMode: false,
                        arrows: false,
                        slidesToShow: 1,
                        slidesToScroll: 1
                    
                    }
                }
                
              ]
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
          $(".sidebar").stick_in_parent();
        });

        // Xử lý Go Top
        var offset = 383,
          gotop = $('.gotop');

        $(window).scroll(function() {
          ($(this).scrollTop() < offset) ? gotop.removeClass('active') : gotop.addClass('active');
        });

        gotop.click(function(){$('html,body').animate({scrollTop: 0}, 700);});
    </script>
 
